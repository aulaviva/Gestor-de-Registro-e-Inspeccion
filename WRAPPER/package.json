{
  "name": "gestor-dri-desktop",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack:win": "electron-builder --win portable",
    "pack:mac": "electron-builder --mac dmg",
    "prepare:dist": "rm -rf dist && mkdir -p dist && cp -r ../dist/* dist/"
  },
  "devDependencies": {
    "electron": "^31.3.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.gdrisoft.app",
    "productName": "Gestor DRI",
    "files": ["main.js","dist/**","build/**","package.json"],
    "directories": { "output": "release" },
    "win": { "icon": "build/icon.ico", "target": [{ "target": "portable", "arch": ["x64"] }] },
    "mac": { "icon": "build/icon.png", "category": "public.app-category.productivity", "target": [{ "target": "dmg", "arch": ["x64","arm64"] }] }
  }
}
